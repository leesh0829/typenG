<Window x:Class="TypeOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TypeOverlay"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="980"
        Height="180"
        ShowInTaskbar="True"
        KeyDown="Window_KeyDown"
        PreviewTextInput="Window_PreviewTextInput"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown">
    <Grid Margin="18" SnapsToDevicePixels="True">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem x:Name="ResizeMenuItem" Header="화면 조정 시작" Click="ResizeMenuItem_OnClick"/>
                <MenuItem Header="다른 문장 하기" Click="NextPassageMenuItem_OnClick"/>
                <Separator/>
                <MenuItem x:Name="ForegroundMenuItem" Header="글자 색상: 흰색" Click="ForegroundMenuItem_OnClick"/>
                <Separator/>
                <MenuItem Header="프로그램 종료" Click="ExitMenuItem_OnClick"/>
            </ContextMenu>
        </Grid.ContextMenu>

        <Border CornerRadius="10" Background="Transparent" Padding="20">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="CurrentLineText"
                           FontFamily="Consolas"
                           FontSize="42"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="NoWrap"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="CurrentTransform"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock x:Name="NextLineText"
                           FontFamily="Consolas"
                           FontSize="42"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Opacity="0"
                           TextWrapping="NoWrap"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="NextTransform" Y="90"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
            
                <Thumb x:Name="ResizeThumb"
                       Width="18"
                       Height="18"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,4,4"
                       Cursor="SizeNWSE"
                       DragDelta="ResizeThumb_OnDragDelta"
                       Visibility="Collapsed">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#66FFFFFF" CornerRadius="2"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </Border>
    </Grid>
</Window>
