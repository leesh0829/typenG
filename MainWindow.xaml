<Window x:Class="typenG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="typenG"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="980"
        Height="180"
        ShowInTaskbar="True"
        KeyDown="Window_KeyDown"
        PreviewTextInput="Window_PreviewTextInput"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
        PreviewMouseRightButtonUp="Window_PreviewMouseRightButtonUp">
    <Window.ContextMenu>
        <ContextMenu x:Name="OverlayContextMenu">
            <MenuItem x:Name="ResizeMenuItem" Header="위치/크기 조정 시작" Click="ResizeMenuItem_OnClick"/>
            <MenuItem Header="다른 문장 하기" Click="NextPassageMenuItem_OnClick"/>
            <Separator/>
            <MenuItem x:Name="ForegroundMenuItem" Header="글자 색상: 검정" Click="ForegroundMenuItem_OnClick"/>
            <Separator/>
            <MenuItem Header="프로그램 종료" Click="ExitMenuItem_OnClick"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid Margin="18" SnapsToDevicePixels="True">
        <Border x:Name="MainFrameBorder"
                CornerRadius="10"
                Background="#01000000"
                Padding="20"
                BorderBrush="Transparent"
                BorderThickness="0">
            <Grid ClipToBounds="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ProgressText"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,0,0,8"
                           FontFamily="Consolas"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Opacity="0.75"
                           Visibility="Collapsed"/>

                <TextBlock x:Name="CurrentLineText"
                           Grid.Row="1"
                           FontFamily="Consolas"
                           FontSize="42"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="NoWrap"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="CurrentTransform"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock x:Name="NextLineText"
                           Grid.Row="1"
                           FontFamily="Consolas"
                           FontSize="42"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Opacity="0"
                           TextWrapping="NoWrap"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="NextTransform" Y="90"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock x:Name="UpcomingLineText"
                           Grid.Row="2"
                           FontFamily="Consolas"
                           FontSize="24"
                           FontWeight="SemiBold"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           TextTrimming="CharacterEllipsis"
                           Opacity="0.55"
                           Visibility="Collapsed"/>
            
                <Thumb x:Name="TopLeftResizeThumb"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="2"
                       Cursor="SizeNWSE"
                       DragDelta="ResizeThumb_OnDragDelta"
                       Visibility="Collapsed">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#FF111111" CornerRadius="8" BorderBrush="White" BorderThickness="1"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="TopRightResizeThumb"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="2"
                       Cursor="SizeNESW"
                       DragDelta="ResizeThumb_OnDragDelta"
                       Visibility="Collapsed">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#FF111111" CornerRadius="8" BorderBrush="White" BorderThickness="1"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="BottomLeftResizeThumb"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Margin="2"
                       Cursor="SizeNESW"
                       DragDelta="ResizeThumb_OnDragDelta"
                       Visibility="Collapsed">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#FF111111" CornerRadius="8" BorderBrush="White" BorderThickness="1"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>

                <Thumb x:Name="BottomRightResizeThumb"
                       Width="16"
                       Height="16"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="2"
                       Cursor="SizeNWSE"
                       DragDelta="ResizeThumb_OnDragDelta"
                       Visibility="Collapsed">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="#FF111111" CornerRadius="8" BorderBrush="White" BorderThickness="1"/>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </Border>
    </Grid>
</Window>
